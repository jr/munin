#!/bin/sh
#
# Plugin to monitor inode-usage.
#
# Parameters understood:
#
# 	config   (required)
# 	autoconf (optional - used by lrrd-config)
#
# $Log$
# Revision 1.1  2004/01/02 15:18:07  jimmyo
# Initial revision
#
# Revision 1.3  2003/11/07 17:43:16  jimmyo
# Cleanups and log entries
#
#
#
# Magic markers (optional - used by lrrd-config and installation
# scripts):
#
#%# family=auto
#%# capabilities=autoconf


print_values() {
	/bin/df -P -i -t noprocfs,nfs | tail +2 | grep -v "//" | while read i; do
		name=`echo $i | sed 's/[\/.]/_/g'| awk '{ print $1 ".value " }'`
		echo -n "$name "
		echo $i | awk '{ print $8 }' | cut -f1 -d%
	done
}

if [ "$1" = "autoconf" ]; then
	if [ "`print_values`" = "" ] ; then
		echo no
	else
		echo yes
	fi
	exit 0
fi

if [ "$1" = "config" ]; then

	echo 'graph_title Inode usage (in %)'
	echo 'graph_args --upper-limit 100 -l 0'
	echo 'graph_vlabel %'
	/bin/df -P -i -t noprocfs,nfs | tail +2 | grep -v "//" | while read i; do
		name=`echo $i | sed 's/[\/.]/_/g'| awk '{ print $1 }'`
		echo -n "$name.label "
		echo $i | awk '{ print $9 }'
		echo "$name.warning 92"
		echo "$name.critical 98" 
	done
	exit 0
fi

print_values
