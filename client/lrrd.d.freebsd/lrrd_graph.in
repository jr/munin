#!/bin/sh
#
# Script to monitor LRRD-graph
#
# Parameters understood:
#
# 	config   (required)
# 	autoconf (optional - used by lrrd-config)
#
# $Log$
# Revision 1.1  2004/01/02 15:18:07  jimmyo
# Initial revision
#
# Revision 1.2  2003/11/07 17:43:16  jimmyo
# Cleanups and log entries
#
#
#
# Magic markers (optional - used by lrrd-config and installation
# scripts):
#
#%# family=auto
#%# capabilities=autoconf

if [ "$1" = "autoconf" ]; then
	echo yes
	exit 0
fi

if [ "$1" = "config" ]; then

	echo 'graph_title LRRD-graph'
	echo 'graph_vlabel seconds'
	cat $GRAPH_STATSFILE | grep "GD" | while read i; do
		name=`echo $i | cut -d"|" -f2 |sed 's/\./_/'`
		echo -n "$name.label "
		echo $i | cut -d"|" -f2
		echo "$name.warning 100"
		echo "$name.critical 179"
	done
	exit 0
fi

cat $GRAPH_STATSFILE | grep "GD" | while read i; do
        name=`echo $i | cut -d"|" -f2 |sed 's/\./_/'`
	echo -n "$name.value "
	echo $i | cut -d"|" -f3
done
