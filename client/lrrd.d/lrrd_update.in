#!/bin/sh
#
# Script to monitor LRRD-update
#
# Parameters understood:
#
# 	config   (required)
# 	autoconf (optional - used by lrrd-config)
#
# $Log$
# Revision 1.1  2004/01/02 15:18:07  jimmyo
# Initial revision
#
# Revision 1.6  2003/11/10 18:13:46  jimmyo
# Revert changes done in 1.5
#
# Revision 1.5  2003/11/07 17:43:16  jimmyo
# Cleanups and log entries
#
#
#
# Magic markers (optional - used by lrrd-config and installation
# scripts):
#
#%# family=manual
#%# capabilities=autoconf

if [ ! "$UPDATE_STATSFILE" ]; then
	UPDATE_STATSFILE=@@DBDIR@@/lrrd-update.stats
fi

if [ "$1" = "autoconf" ]; then
	echo no
	exit 1
fi

if [ "$1" = "config" ]; then

	echo 'graph_title LRRD-update'
	echo 'graph_vlabel seconds'
	[ -f $UPDATE_STATSFILE ] || exit 0
	cat $UPDATE_STATSFILE | grep "UD" | while read i; do
		name=`echo $i | cut -d"|" -f2 |tr  '.-' '__'`
		echo -n "$name.label "
		echo $i | cut -d"|" -f2
		echo "$name.warning 100"
		echo "$name.critical 180"
	done
	exit 0
fi

[ -f $UPDATE_STATSFILE ] || exit 0

cat $UPDATE_STATSFILE | grep "UD" | while read i; do
        name=`echo $i | cut -d"|" -f2 | tr  '.-' '__'`
	echo -n "$name.value "
	echo $i | cut -d"|" -f3
done
