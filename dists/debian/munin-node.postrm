#! /bin/sh

set -e

# workaround for bug #198522
delete_dir_if_empty() {
	if [ ! -d "$1" ]; then
		return 0;
	fi
	rmdir --ignore-fail-on-non-empty $1;
}

if [ "$1" = "purge" ]; then
	# delete dangling symlinks
	test -d /etc/lrrd/client.d/ && for plugin in $(find /etc/lrrd/client.d/ -type l); do
		if [ ! -e $(readlink $plugin) ]; then
			rm $plugin
		fi
	done

	rm -f /var/lib/lrrd/plugin-state/*.state
	rm -f /var/log/lrrd/lrrd-client.log*

	delete_dir_if_empty /var/lib/lrrd/plugin-state
	delete_dir_if_empty /var/lib/lrrd
	delete_dir_if_empty /var/run/lrrd
	delete_dir_if_empty /var/log/lrrd
	delete_dir_if_empty /etc/lrrd/client-conf.d
	delete_dir_if_empty /etc/lrrd/client.d
	delete_dir_if_empty /etc/lrrd
fi

