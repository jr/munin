# This file overrides variables used by the makefile, so it's behaviour
# becomes suitable for building Debian packages.

PREFIX     = $(DESTDIR)/usr
CONFDIR    = $(DESTDIR)/etc/lrrd
HTMLDIR    = $(DESTDIR)/var/www/lrrd
DBDIR      = $(DESTDIR)/var/lib/lrrd

LIBDIR     = $(PREFIX)/share/lrrd

HOSTNAME   = localhost.localdomain

PERLLIB    = $(DESTDIR)$(shell $(PERL) -V:sitelib | cut -d= -f2 | sed "s/[\';]//g")

CHECKUSER  = \#
CHECKGROUP = \#
CHOWN      = \#
CHMOD      = \#
CHGRP      = \#
