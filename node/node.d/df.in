#!@@GOODSH@@
# -*- sh -*-
#
# Script to monitor disk usage.
#
# Parameters understood:
#
# 	config   (required)
# 	autoconf (optional - used by munin-config)
#
# Magic markers (optional - used by munin-config and installation
# scripts):
#
#%# family=auto
#%# capabilities=autoconf

. $MUNIN_LIBDIR/plugins/plugin.sh

print_values () {
    df -P -l 2>/dev/null | sed -e 1d -e '/\/\//d' -e 's/%//' | 
    while read dev size used free pct fs; do
	echo "$(clean_fieldname $dev).value $pct"
    done
}


if [ "$1" = "autoconf" ]; then
    if [ -z "$(print_values)" ] ; then
	echo no
	exit 1
    else
	echo yes
	exit 0
    fi
fi

if [ "$1" = "config" ]; then
    echo 'graph_title Filesystem usage (in %)'
    echo 'graph_args --upper-limit 100 -l 0'
    echo 'graph_vlabel %'
    echo 'graph_scale no'
    df -P -l  | sed -e 1d -e '/\/\//d' -e 's/%//' | sort | 
    while read dev size used free pct fs; do
	name=$(clean_fieldname $dev)
	echo "$name.label $fs"
	echo "$name.warning 92"
	echo "$name.critical 98"
    done
    exit 0
fi

print_values

