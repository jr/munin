#!@@GOODSH@@
# -*- sh -*-
#
# $Id$
#
# Environment
#   df       - path to df executable (GNU df makes life easier)
#   warning  - warning percentage, default 92
#   critical - critical percentage, default 98
#
#%# family=auto
#%# capabilites=autoconf

DF=${df:-/usr/bin/df}
TAIL=/usr/bin/tail

. $MUNIN_LIBDIR/plugins/plugin.sh

if [ "$1" = 'autoconf' ]; then
    echo yes
    exit 0
fi

# Figure out correct way to invoke df and what output to use
if $DF -P -l -i >/dev/null 2>&1; then
	DF="$DF -P -l -i"
	FSNAME=6
	PCNT=5
else
	DF="$DF -oi 2>/dev/null"
	FSNAME=5
	PCNT=4
fi

if [ "$1" = "config" ]; then
    echo 'graph_title Filesystem inode usage (in %)'
    echo 'graph_args --upper-limit 100'
    echo 'graph_category disk'
    echo 'graph_scale no'
    $DF | $TAIL +2 | while read dev two three four five six; do
	name=$(clean_fieldname $dev)
	# Ignore tmpfs.
	if [ "$name" != "swap" ]; then
	    case $FSNAME in
		5) mnt=$five;;
		6) mnt=$six;;
	    esac
	    echo "$name.label $mnt"
	    echo "$name.warning ${warning:-92}"
	    echo "$name.critical ${critical:-98}"
	fi
    done
    exit 0
fi

$DF | $TAIL +2 | while read dev two three four five six; do
    name=$(clean_fieldname $dev)
    # Ignore tmpfs.
    if [ "$name" != "swap" ]; then
	case $PCNT in
	    5) pct=$five;;
	    4) pct=$four;;
	esac
	echo "$name.value $pct" | cut -d'%' -f1
    fi
done
